<%include ../partials/header %>
<div class="container">
    <div class="row">
       <h1 style="text-align: center">Edit <%=campground.name%></h1>
       <div style="width: 30%; margin:30px auto">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                     <input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]">
                </div>
                <div class="form-group">
                     <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]"></div>
               <div class="form-group">
                         <textarea class="form-control" type="text"   name="campground[description]"><%=campground.description%></textarea></div>     
                         <div class="form-group">
                              <label for="location">Location</label>
                             <input class="form-control" id="location" value="<%=campground.location%>" type="text" placeholder="location" name="campground[location]">
                         </div>
                         <div class="form-group">
                                   <input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01">
                              </div>
                     <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button></div>
                     
            </form>
            <a href="/campgrounds">Go Back</a>
       </div>
       
    </div>
</div>
<%include ../partials/footer %>