<div class="container ">
    <div class="row d-flex justify-content-center">
         <div class="d-flex align-items-center">
       <h1 style="text-align: center">Create a new Campground :</h1>
         </div>
       <div style="width: 30%; margin:30px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group"> <label for="location">Name of the Campground</label>
                     <input class="form-control" type="text" placeholder="Camp-name" name="name">
                </div>
                <div class="form-group"> <label for="image">Give an image for the campground.</label>
                     <input class="form-control" type="text" placeholder="image-url" name="image"></div>
               <div class="form-group"> <label for="description">Give a brief descrption.</label>
                         <input class="form-control" type="text" placeholder="Description" name="description"></div>  
                         <div class="form-group">
                             <label for="location">Location</label>
                            <input class="form-control" id="lat" type="text" placeholder="location" name="location">
                            
                        </div> 

                         <div class="form-group"> <label for="price">Price</label>
                                   <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">
                              </div>
                <div class="form-group">
                     <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button></div>
            </form>
            
            <a href="/campgrounds">Go Back</a>
       </div>
       
    </div>
</div>
